generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// TRACK A: THE SOLVERS
model SolverRegistration {
  id        String   @id @default(cuid())
  teamName  String
  
  // Leader Details
  leaderName     String
  leaderEmail    String   @unique // One registration per email for Track A
  leaderPhone    String
  leaderCollege  String
  leaderGithub   String
  leaderLinkedin String?

  // Member 2
  member2Name     String
  member2Github   String
  member2Linkedin String?
  
  // Member 3
  member3Name     String
  member3Github   String
  member3Linkedin String?

  // Member 4
  member4Name     String
  member4Github   String
  member4Linkedin String?

  // Track A Specifics
  pastHackathonExperience String? // Text describing past experience

  createdAt DateTime @default(now())
}

// TRACK B: THE VISIONARIES
model VisionaryRegistration {
  id        String   @id @default(cuid())
  teamName  String

  // Leader Details
  leaderName     String
  leaderEmail    String   @unique // One registration per email for Track B
  leaderPhone    String
  leaderCollege  String
  leaderGithub   String
  leaderLinkedin String?

  // Member 2
  member2Name     String
  member2Github   String
  member2Linkedin String?
  
  // Member 3
  member3Name     String
  member3Github   String
  member3Linkedin String?

  // Member 4
  member4Name     String
  member4Github   String
  member4Linkedin String?

  // Track B Specifics
  projectTitle    String
  projectAbstract String
  techStack       String
  focusArea       String // TrustTech, Sustainable Intelligence, etc.

  createdAt DateTime @default(now())
}

model Otp {
  id        String   @id @default(cuid())
  email     String   @unique
  otp       String
  expiresAt DateTime
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())
}
